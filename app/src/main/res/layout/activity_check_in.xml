<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CheckInActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:titleTextColor="@color/white_color"
        app:popupTheme="@style/ToolbarTheme" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_below="@+id/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            android:layout_margin="5dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="5dp">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/chiGuestNameTv"
                            android:hint="Guest Name"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:imeOptions="flagNoExtractUi"
                            android:layout_marginStart="10dp"
                            android:dropDownHeight="200dp"
                            android:cursorVisible="true"
                            android:focusable="true"
                            android:clickable="true" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="1"
                        android:id="@+id/chiCheckInDateTi"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/chiCheckInDateEt"
                            android:hint="Check-In"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:imeOptions="flagNoExtractUi"
                            android:layout_marginStart="10dp"
                            android:editable="false"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_marginTop="10dp"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/nightMinusBtn"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="-"/>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/chiNoNightEt"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:editable="false"
                            android:imeOptions="flagNoExtractUi"
                            android:background="@null"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/nightPlusBtn"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="+"/>

                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/chiCheckOutEt"
                            android:hint="Check-Out"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:imeOptions="flagNoExtractUi"
                            android:layout_marginStart="10dp"
                            android:editable="false"
                            android:clickable="false"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight="4"
            android:layout_below="@+id/ckiFillForm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <!--<HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:orientation="horizontal"
                            android:layout_gravity="top"
                            android:gravity="center"
                            android:weightSum="8">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:minWidth="@dimen/avSr"
                                android:layout_height="match_parent"
                                android:text="Sr"
                                android:textSize="@dimen/chkTitleFontSize"
                                android:background="@drawable/check_item_background"
                                android:gravity="center"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:minWidth="@dimen/avRoomType"
                                android:layout_height="match_parent"
                                android:text="Room Type"
                                android:textSize="@dimen/chkTitleFontSize"
                                android:background="@drawable/check_item_background"
                                android:gravity="center"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:minWidth="@dimen/avRoom"
                                android:layout_height="match_parent"
                                android:text="Room"
                                android:textSize="@dimen/chkTitleFontSize"
                                android:background="@drawable/check_item_background"
                                android:gravity="center"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:minWidth="@dimen/avBedType"
                                android:layout_height="match_parent"
                                android:text="Bed Type"
                                android:textSize="@dimen/chkTitleFontSize"
                                android:background="@drawable/check_item_background"
                                android:gravity="center"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:minWidth="@dimen/avCharges"
                                android:layout_height="match_parent"
                                android:text="Charges"
                                android:textSize="@dimen/chkTitleFontSize"
                                android:background="@drawable/check_item_background"
                                android:gravity="center"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:minWidth="@dimen/avAmount"
                                android:layout_height="match_parent"
                                android:text="Amount"
                                android:textSize="@dimen/chkTitleFontSize"
                                android:background="@drawable/check_item_background"
                                android:gravity="center"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:minWidth="@dimen/avExtra"
                                android:layout_height="match_parent"
                                android:text="Extra"
                                android:textSize="@dimen/chkTitleFontSize"
                                android:background="@drawable/check_item_background"
                                android:gravity="center"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:minWidth="@dimen/avBalance"
                                android:layout_height="match_parent"
                                android:text="Balance"
                                android:textSize="@dimen/chkTitleFontSize"
                                android:background="@drawable/check_item_background"
                                android:gravity="center"/>
                        </LinearLayout>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/chiRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:nestedScrollingEnabled="false"
                                tools:listitem="@layout/check_in_recycler_item_layout"/>
                        </ScrollView>

                    </LinearLayout>

                <!--</HorizontalScrollView>-->

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            android:layout_margin="5dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

                <TableLayout
                    android:id="@+id/briefReport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="4"
                    android:layout_gravity="center_vertical">

                    <TableRow>

                        <TextView
                            android:padding="3dip"
                            android:text=" " />

                        <TextView
                            android:padding="3dip"
                            android:text="Total Amount" />

                        <TextView
                            android:gravity="right"
                            android:text=":" />

                        <TextView
                            android:id="@+id/totalAmount"
                            android:layout_gravity="right"
                            android:layout_span="3"
                            android:padding="10dip"
                            android:text="10000" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:padding="3dip"
                            android:text=" " />

                        <TextView
                            android:padding="3dip"
                            android:text="Discount" />

                        <TextView
                            android:gravity="right"
                            android:text=":" />

                        <TextView
                            android:id="@+id/totalDiscount"
                            android:layout_gravity="right"
                            android:layout_span="3"
                            android:padding="10dip"
                            android:text="0" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:padding="3dip"
                            android:text=" " />

                        <TextView
                            android:padding="3dip"
                            android:text="Tax" />

                        <TextView
                            android:gravity="right"
                            android:text=":" />

                        <TextView
                            android:id="@+id/totalTax"
                            android:layout_gravity="right"
                            android:layout_span="3"
                            android:padding="10dip"
                            android:text="100" />
                    </TableRow>

                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />

                    <TableRow>

                        <TextView
                            android:padding="3dip"
                            android:text=" " />

                        <TextView
                            android:padding="3dip"
                            android:text="Net Amount"/>

                        <TextView
                            android:gravity="right"
                            android:text=":" />

                        <TextView
                            android:id="@+id/totalNetAmount"
                            android:layout_gravity="right"
                            android:layout_span="3"
                            android:padding="10dip"
                            android:text="10100" />
                    </TableRow>

                </TableLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>