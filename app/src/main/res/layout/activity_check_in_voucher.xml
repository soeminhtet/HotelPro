<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.CheckInVoucherActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/checkInVoucher_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:titleTextColor="@color/white_color"
        app:popupTheme="@style/ToolbarTheme" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/checkInVoucher_toolbar">

        <TableLayout
            android:id="@+id/report_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="4">

            <TableRow>

                <TextView
                    android:layout_span="5"
                    android:gravity="right"
                    android:padding="3dip"
                    android:text="Date\t\t\t:" />

                <TextView
                    android:id="@+id/todayDate"
                    android:layout_span="1"
                    android:gravity="right"
                    android:padding="10dip"
                    android:text="13-07-2017" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Register No." />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/register_no"
                    android:layout_span="4"
                    android:padding="10dp"
                    android:text="\t\tNo" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Guest Name" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/guest_name"
                    android:layout_span="4"
                    android:padding="10dp"
                    android:text="\t\tName" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Currency" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/currency"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="\t\tKyat" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Pay Type" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/payType"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="\t\tCash" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Room No" />

                <TextView
                    android:gravity="right"
                    android:text="\t\t\t\t\t:" />

                <TextView
                    android:id="@+id/roomNo"
                    android:layout_span="4"
                    android:padding="10dp"
                    android:text="\t\tRoom" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="" />

                <TextView
                    android:padding="3dip"
                    android:text="Check In Date" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/checkInDate"
                    android:layout_marginRight="5dp"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="\t\t13-07-2017" />

            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="" />

                <TextView
                    android:padding="3dip"
                    android:text="Check Out Date" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/checkOutDate"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="\t\t13-07-2017" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text=" " />

                <TextView
                    android:padding="3dip"
                    android:text="Days" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/stayDay"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="\t\tday" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text=" " />

                <TextView
                    android:padding="3dip"
                    android:text="Total Amt" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/totalAmount"
                    android:layout_gravity="right"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="10000" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text=" " />

                <TextView
                    android:padding="3dip"
                    android:text="Service Amt" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/serviceAmount"
                    android:layout_gravity="right"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="0.00" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text=" " />

                <TextView
                    android:padding="3dip"
                    android:text="Discount(%)" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/discount"
                    android:layout_gravity="right"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="0.00" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text=" " />

                <TextView
                    android:padding="3dip"
                    android:text="RoomDiscount" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/rmDiscount"
                    android:layout_gravity="right"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="0.00" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text=" " />

                <TextView
                    android:padding="3dip"
                    android:text="Advance Paid" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/advPaid"
                    android:layout_gravity="right"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="0.00" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text=" " />

                <TextView
                    android:padding="3dip"
                    android:text="Adv Paid Dis" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/advPaidDiscount"
                    android:layout_gravity="right"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="0.00" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text=" " />

                <TextView
                    android:padding="3dip"
                    android:text="Gov.Tax(%)" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/govTax"
                    android:layout_gravity="right"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="700" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text=" " />

                <TextView
                    android:padding="3dip"
                    android:text="Ser.Tax($)" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/serviceTax"
                    android:layout_gravity="right"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="0.00" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text=" " />

                <TextView
                    android:padding="3dip"
                    android:text="Rm.Tax(%)" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/roomTax"
                    android:layout_gravity="right"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="0.00" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text=" " />

                <TextView
                    android:padding="3dip"
                    android:text="Card.Tax(%)" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/cardTax"
                    android:layout_gravity="right"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="0.00" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text=" " />

                <TextView
                    android:padding="3dip"
                    android:text="Refund Amt" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/refundAmt"
                    android:layout_gravity="right"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="0.00" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text=" " />

                <TextView
                    android:padding="3dip"
                    android:text="Net Amount" />

                <TextView
                    android:gravity="right"
                    android:text=":" />

                <TextView
                    android:id="@+id/netAmount"
                    android:layout_gravity="right"
                    android:layout_span="3"
                    android:padding="10dip"
                    android:text="10000" />
            </TableRow>

