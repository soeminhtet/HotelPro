<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="7"
    android:background="@drawable/gradient3">

    <RelativeLayout
        android:id="@+id/mainStatus"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soe Min Htet"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_toLeftOf="@+id/mainWifiImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SVR.Status "
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/mainWifiImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_signal_wifi_off"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="5"
        android:layout_below="@+id/mainStatus"
        android:layout_above="@+id/copyright"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:weightSum="7">

            <io.armcha.elasticview.ElasticView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#fff"
                app:flexibility="10"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_weight="4"
                        android:id="@+id/floorImg"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:src="@drawable/floortype"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000"/>

                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Floor Type"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="10dp"/>

                </LinearLayout>

            </io.armcha.elasticview.ElasticView>

            <io.armcha.elasticview.ElasticView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#fff"
                app:flexibility="10"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_weight="4"
                        android:id="@+id/housekeepingImg"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:src="@drawable/housekeeping"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000"/>

                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="House Keeping"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="10dp"/>

                </LinearLayout>

            </io.armcha.elasticview.ElasticView>

            <io.armcha.elasticview.ElasticView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#fff"
                app:flexibility="10"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_weight="4"
                        android:id="@+id/roomTypeImg"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:src="@drawable/roomtype"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000"/>

                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Room Type"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="10dp"/>

                </LinearLayout>

            </io.armcha.elasticview.ElasticView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="10"
            android:layout_weight="1">

            <io.armcha.elasticview.ElasticView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#fff"
                app:flexibility="10"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_weight="4"
                        android:id="@+id/lostAndFoundImg"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:src="@drawable/lostandfound"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000"/>

                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Lost &amp; Found"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="10dp"/>

                </LinearLayout>

            </io.armcha.elasticview.ElasticView>

            <io.armcha.elasticview.ElasticView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#fff"
                app:flexibility="10"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:id="@+id/checkIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_weight="4"
                        android:id="@+id/checkInImg"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:src="@drawable/checkin"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000"/>

                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Check In"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="10dp"/>

                </LinearLayout>

            </io.armcha.elasticview.ElasticView>

            <io.armcha.elasticview.ElasticView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#fff"
                app:flexibility="10"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:id="@+id/reservation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_weight="4"
                        android:id="@+id/reservationImg"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:src="@drawable/reservation"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000"/>

                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Reservation"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="10dp"/>

                </LinearLayout>

            </io.armcha.elasticview.ElasticView>

            <io.armcha.elasticview.ElasticView
                android:id="@+id/mainExitCard"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#fff"
                app:flexibility="10"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_weight="4"
                        android:id="@+id/exitImg"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:src="@drawable/exit"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000"/>

                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Exit"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="10dp"/>

                </LinearLayout>

            </io.armcha.elasticview.ElasticView>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:gravity="bottom"
        android:layout_weight="1"
        android:id="@+id/copyright"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Â© CopyRight 2016-2017 Galaxy Software. All Rights Reserved."
        android:paddingLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"/>


</LinearLayout>